# Niksen Job Search Environment Variables
# Copy this file to .env and fill in the actual values

# API Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (when added)
# DATABASE_URL=postgresql://username:password@localhost:5432/niksen_job_search
# DATABASE_NAME=niksen_job_search

# Clerk Authentication
# Get these from https://dashboard.clerk.dev
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME="Niksen Job Search"

# External API Keys (when integrated)
# LINKEDIN_API_KEY=your-linkedin-api-key
# INDEED_API_KEY=your-indeed-api-key
# GLASSDOOR_API_KEY=your-glassdoor-api-key

# Email Configuration (when implemented)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Redis Configuration (when implemented for caching)
# REDIS_URL=redis://localhost:6379

# File Upload (when implemented)
# UPLOAD_MAX_SIZE=5mb
# UPLOAD_ALLOWED_TYPES=pdf,doc,docx

# Logging
LOG_LEVEL=info
